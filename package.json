{
  "name": "pokedex",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "native": "cd apps/expo && yarn start",
    "server": "yarn build && nx serve nest-app",
    "watch": "yarn workspaces foreach -pi run watch",
    "vercel:install": "yarn set version 3.5 && yarn install",
    "web": "yarn build && cd apps/next && yarn next",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "web:prod": "yarn workspace next-app build",
    "web:prod:serve": "yarn workspace next-app serve",
    "postinstall": "yarn check-tamagui && yarn build",
    "build": "yarn workspaces foreach --all --exclude next-app run build",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary react-native-web-lite@canary",
    "check-tamagui": "tamagui check",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "resolutions": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-refresh": "^0.14.0",
    "react-native-svg": "15.3.0",
    "react-native-web": "~0.19.12"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.6",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.2",
    "@tamagui/cli": "^1.117.1",
    "axios": "^1.7.8",
    "axios-cache-interceptor": "^1.6.2",
    "check-dependency-version-consistency": "^4.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint": "^9.8.0",
    "expo": "~51.0.8",
    "husky": "^9.1.6",
    "next": "14.2.16",
    "node-gyp": "^10.1.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pokedex-promise-v2": "^4.2.0",
    "pokenode-ts": "^1.20.0",
    "prettier": "^3.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "turbo": "^1.13.4",
    "typescript": "^5.6.2",
    "use-color-thief": "^1.3.2",
    "vitest": "^2.1.1"
  },
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": "22",
    "npm": "10.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@eslint/js": "^9.8.0",
    "@expo/cli": "~0.18.13",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "20.1.3",
    "@nx/eslint-plugin": "20.1.3",
    "@nx/expo": "20.1.3",
    "@nx/jest": "20.1.3",
    "@nx/js": "20.1.3",
    "@nx/nest": "20.1.3",
    "@nx/next": "20.1.3",
    "@nx/node": "20.1.3",
    "@nx/web": "20.1.3",
    "@nx/webpack": "20.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@types/passport": "^0",
    "@types/passport-local": "^1",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "20.1.3",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript-eslint": "^8.0.0",
    "webpack-cli": "^5.1.4"
  }
}
